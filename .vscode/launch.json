    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug hardhat tests in current file",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
              "hardhat",
              "test",
              "${file}"
            ]
        },
        {
            "name": "Debug script",
            "type": "node",
            "request": "launch",
            "console": "integratedTerminal",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
              "hardhat",
              "run",
              "${file}",
              "--network",
              "localhost"
            ]
        }
    ]
}